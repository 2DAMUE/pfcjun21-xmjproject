<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vw_Search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_GameSource">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJuegosActivity"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:divider="@drawable/divider"
        android:layoutAnimation="@anim/layout_fall_down"
        android:scrollbars="none"
        />


    <SearchView
        android:id="@+id/view_search"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerJuegosActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="51dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-4dp"
        app:srcCompat="@drawable/img_setting_foreground" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="78dp"
        android:textColor="@color/black_GameSource"
        android:layout_height="51dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="273dp"
        android:layout_toStartOf="@+id/img_setting"
        android:text="@string/Volver" />

</RelativeLayout>
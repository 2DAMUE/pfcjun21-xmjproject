<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vw_Search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_GameSource">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJuegosActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/divider"
        android:layoutAnimation="@anim/layout_fall_down"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_search"
        app:layout_constraintVertical_bias="0.542" />

    <SearchView
        android:id="@+id/view_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerJuegosActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="245dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/view_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/img_setting_foreground" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/img_setting"
        android:text="@string/Volver"
        android:textColor="@color/black_GameSource"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view_search"
        app:layout_constraintEnd_toStartOf="@+id/img_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
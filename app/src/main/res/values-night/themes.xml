<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameSource" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_GameSource</item>
        <item name="colorPrimaryVariant">@color/gray_GameSource</item>
        <item name="colorOnPrimary">@color/black_GameSource</item>
        <item name="compactCalendarBackgroundColor">@color/white_GameSource</item>
        <item name="compactCalendarTextColor">@color/black_GameSource</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_GameSource</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GameSourceNoBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_GameSource</item>
        <item name="colorPrimaryVariant">@color/gray_GameSource</item>
        <item name="colorOnPrimary">@color/black_GameSource</item>
        <item name="backgroundColor">@color/gray_GameSource</item>
        <item name="compactCalendarBackgroundColor">@color/gray_GameSource</item>
        <item name="compactCalendarTextColor">@color/white_GameSource</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_GameSource</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>